.ver
  &_aside
    &_component
      &_list
        padding 8px 0
        &_box
          display flex
          flex-wrap wrap
          align-content flex-start
          padding 0 8px
        &_title
          padding 8px 12px
          font-size 14px
        &_item
          margin 2.5px 2px
          flex 0 0 48%;
          height 30px
          line-height 30px
          border 1px solid $border-color
          font-size 12px
          color #333
          text-align center
          white-space nowrap
          text-overflow ellipsis
          overflow hidden
          &:hover
            color $hover-color
            border 1px dashed $hover-color
          &>a
            display block
            cursor move
            background $border-color
