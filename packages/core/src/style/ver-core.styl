@import "ver-color.styl"
@import "ver-common.styl"

.ver
  &_core
    box-shadow 0 2px 8px $box-shadow-color
    height 100%


    &_form
      &_item
        margin 0
        position relative
        padding 5px 10px

        &.active
          background #d8e8fa


    &_drag_area
      height 100%
      padding-left 24px
      padding-top 20px;

      &_row,
      &_col
        height 30px
        background yellow
        outline none
        margin 10px 0
        border 1px solid

      &_col
        background greenyellow

